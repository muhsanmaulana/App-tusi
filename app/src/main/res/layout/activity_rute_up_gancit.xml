                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/detail_buttons"
                                android:text="Detail"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/sarabun_medium"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transjakarta"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/circle_red_pilrute"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sarabun_bold"
                                    android:text="Rekomendasi"
                                    android:textSize="10sp"
                                    android:textColor="#000000"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sarabun_bold"
                                    android:text="Rp 3.500"
                                    android:textSize="10sp"
                                    android:textColor="#000000"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sarabun_bold"
                                    android:text="30 min"
                                    android:textSize="10sp"
                                    android:textColor="#BDBABA"
                                    />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:text="Status"
                                    android:textSize="12sp"
                                    android:textColor="#BDBABA"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sarabun_bold"
                                    android:text="Tersedia"
                                    android:textSize="12sp"
                                    android:textColor="@color/ColorGreenText"
                                    />
                            </LinearLayout>

                            <Button
                                android:id="@+id/detail_pil3"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/detail_buttons"
                                android:text="Detail"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF" />

                        </RelativeLayout>


                    </LinearLayout>





                </LinearLayout>

            </ScrollView>



        </LinearLayout>


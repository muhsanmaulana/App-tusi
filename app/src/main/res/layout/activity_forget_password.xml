<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="134dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle_login" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/ic_person_black_24dp" />

        <EditText
            android:id="@+id/email_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:fontFamily="@font/sarabun_medium"
            android:hint="Email/No Telp"
            android:textSize="14sp" />

        <Button
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="100dp"
            android:id="@+id/code_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Send a code"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/sarabun_bold"
            android:background="@drawable/rectangle_button"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:fontFamily="@font/sarabun_extrabold"
        android:textSize="45sp"
        android:textColor="#41AD82"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_login"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="296dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="@font/sarabun_medium"
        android:hint="Code"
        android:textSize="14sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="313dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/password_button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/rectangle_button"
        android:fontFamily="@font/sarabun_bold"
        android:text="Change Password"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="376dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihanRuteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_pilihanrute">

                <TextView
                    android:id="@+id/detail_text_pilrute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="32dp"
                    android:layout_width="20dp"
                    android:layout_height="180dp"
                    android:background="@drawable/pilrute_image_jalan"
                    />

                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/circle1_image_pilrute"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            app:srcCompat="@drawable/circle_blue_pilrute"/>
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/lokasi1"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/sarabun_medium"
                            android:text="Halte Transjakarta Simprug"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="60dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            app:srcCompat="@drawable/circle_blue_pilrute"/>
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/lokasi2"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/sarabun_medium"
                            android:text="Halte Pasar Kebayoran Lama"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="60dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            app:srcCompat="@drawable/circle_blue_pilrute"/>
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/lokasi3"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/sarabun_medium"
                            android:text="Halte Kebayoran Lama Bungur"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:id="@+id/jalan_button_pilrute"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/jalan_pilrute"
            android:fontFamily="@font/sarabun_bold"
            android:text="Jalan"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".RuteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <ImageButton
                    android:id="@+id/back_to"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/place_blue"
                            android:layout_marginTop="20dp"
                            />
                        <Button
                            android:id="@+id/location_from"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textSize="14sp"
                            android:text="Universitas Pertamina"
                            android:textAllCaps="false"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/place_red"
                            android:layout_marginTop="20dp"
                            />
                        <Button
                            android:id="@+id/location_to"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textSize="14sp"
                            android:text="Gandaria City"
                            android:textAllCaps="false"
                            />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/rute_pilihan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transjakarta > KRL > Sepeda"
                            android:textColor="#747171"
                            android:fontFamily="@font/sarabun_bold"
                            android:textSize="14sp"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="25dp"
                                android:layout_height="10dp"
                                android:background="@drawable/tiga"
                                />
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#000000"
                                android:text="Rekomendasi"
                                android:fontFamily="@font/sarabun_bold"
                                />

                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="Rp.10.000"
                                android:fontFamily="@font/sarabun_bold"
                                />
                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="40 min"
                                android:fontFamily="@font/sarabun_bold"
                                />

                            <Button
                                android:layout_marginTop="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:text="Detail"
                                android:textAllCaps="false"
                                android:fontFamily="@font/sarabun_bold"
                                android:textSize="10sp"
                                android:textColor="#FFFF"
                                android:background="@drawable/detail_buttons"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_poin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/poin_text_transaksi"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Poin"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/transaksi_button_transaksi"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="90dp"
                    android:background="@drawable/circle_poin"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Transaksi"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="48px" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/rectangle_poinwhite">

                    <ImageView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/up1_image_transaksi"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/poin_up" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="65dp"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/poin1_image_transaksi"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            app:srcCompat="@drawable/poin" />

                        <TextView
                            android:id="@+id/angka_poin1_text_transaksi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sarabun_bold"
                            android:text="500.000"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/topup_pemakaian1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Top Up"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:textColor="#231616" />

                                <TextView
                                    android:id="@+id/tgl1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tgl"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:textColor="#231616" />

                                <TextView
                                    android:id="@+id/pemakaian_topup1_text_transaksi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Top Up"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/value_topup_pemakaian1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:text="Mobile Banking" />

                                <TextView
                                    android:id="@+id/hari1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:text="Selasa" />

                                <TextView
                                    android:id="@+id/value_pemakaian_topup1_text_transaksi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:text="23/10/2019" />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/rectangle_poinwhite">

                    <ImageView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/up1_image_transaksi"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/poin_down" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="65dp"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/poin1_image_transaksi"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            app:srcCompat="@drawable/poin" />

                        <TextView
                            android:id="@+id/angka_poin1_text_transaksi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sarabun_bold"
                            android:text="3500"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/topup_pemakaian1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pemakaian"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:textColor="#231616" />

                                <TextView
                                    android:id="@+id/tgl1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tgl"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:textColor="#231616" />

                                <TextView
                                    android:id="@+id/pemakaian_topup1_text_transaksi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Top Up"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/value_topup_pemakaian1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:text="Mobile Banking" />

                                <TextView
                                    android:id="@+id/hari1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:text="Selasa" />

                                <TextView
                                    android:id="@+id/value_pemakaian_topup1_text_transaksi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:text="23/10/2019" />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/rectangle_poinwhite">

                    <ImageView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/up1_image_transaksi"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/poin_up" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="65dp"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/poin1_image_transaksi"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            app:srcCompat="@drawable/poin" />

                        <TextView
                            android:id="@+id/angka_poin1_text_transaksi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sarabun_bold"
                            android:text="500.000"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/topup_pemakaian1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Top Up"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:textColor="#231616" />

                                <TextView
                                    android:id="@+id/tgl1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tgl"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:textColor="#231616" />

                                <TextView
                                    android:id="@+id/pemakaian_topup1_text_transaksi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Top Up"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/value_topup_pemakaian1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:text="Indomaret" />

                                <TextView
                                    android:id="@+id/hari1_text_transaksi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:text="Selasa" />

                                <TextView
                                    android:id="@+id/value_pemakaian_topup1_text_transaksi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/sarabun_medium"
                                    android:text="23/10/2019" />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/rectangle_navigation"

            >
            <ImageButton
                android:id="@+id/go_nav"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/go_nav" />


            <ImageButton
                android:id="@+id/home_nav"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_centerVertical="true"
                android:layout_height="45dp"
                android:background="@drawable/ic_home_black_24dp"
                />
            <ImageButton
                android:id="@+id/transaction_nav"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="100dp"
                android:layout_width="45dp"
                android:layout_centerVertical="true"
                android:layout_height="45dp"
                android:background="@drawable/ic_trending_up_black_24dp"
                />
            <ImageButton
                android:id="@+id/notif_nav"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:layout_width="45dp"
                android:layout_centerVertical="true"
                android:layout_height="45dp"
                android:background="@drawable/ic_notifications_black_24dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_nav"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_height="30dp"
                android:src="@drawable/profil_pic"
                />
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

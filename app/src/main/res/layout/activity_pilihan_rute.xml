<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihanRuteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:background="@drawable/rectangle_pilihanrute">

                <TextView
                    android:id="@+id/detail_text_pilrute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="48px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp">

                            <RelativeLayout
                                android:layout_width="15dp"
                                android:layout_height="300dp"
                                android:layout_marginStart="40dp"
                                android:background="@drawable/pilrute_image_jalan">

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="35dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/circle1_image_pilrute"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        app:srcCompat="@drawable/circle_red_pilrute" />

                                    <ImageView
                                        android:id="@+id/circle2_image_pilrute"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginTop="60dp"
                                        app:srcCompat="@drawable/circle_red_pilrute" />

                                    <ImageView
                                        android:id="@+id/circle3_image_pilrute"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginTop="60dp"
                                        app:srcCompat="@drawable/circle_red_pilrute" />

                                    <ImageView
                                        android:id="@+id/circle4_image_pilrute"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginTop="80dp"
                                        app:srcCompat="@drawable/circle_blue_pilrute" />
                                </LinearLayout>
                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="100dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lokasi1_pilrute"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:fontFamily="@font/sarabun_medium"
                            android:text="Halte Simprug"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/lokasi2_pilrute"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/sarabun_medium"
                            android:text="Halte Ps. Kebayoran Lama"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/lokasi3_pilrute"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/sarabun_medium"
                            android:text="Halte Kebayoran Lama Bungur"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/lokasi4_pilrute"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="80dp"
                            android:fontFamily="@font/sarabun_medium"
                            android:text="Pos Sepeda Anggrek"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="false"
                    android:layout_marginBottom="60dp">

                    <Button
                        android:id="@+id/jalan_button_pilrute"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/jalan_pilrute"
                        android:fontFamily="@font/sarabun_bold"
                        android:text="Jalan"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="64px" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
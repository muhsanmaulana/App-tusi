                    android:background="@drawable/location_stasiunterdekat" />

                <TextView
                    android:id="@+id/stasiun5_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Stasiun Haji Nawi"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <TextView
                    android:id="@+id/jarak_stasiun5_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/sarabun_regular"
                    android:text="20 Km"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <Button
                    android:id="@+id/detail5button_mrt"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/detail_stasiunterdekat"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="36px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/location6_image_mrt"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/location_stasiunterdekat" />

                <TextView
                    android:id="@+id/stasiun6_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Stasiun Fatmawati"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <TextView
                    android:id="@+id/jarak_stasiun6_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/sarabun_regular"
                    android:text="25 Km"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <Button
                    android:id="@+id/detail6button_mrt"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/detail_stasiunterdekat"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="36px" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="540dp"
            android:background="@drawable/more_stasiunterdekat"
            android:gravity="center">

            <Button
                android:id="@+id/more_button_mrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/more_stasiunterdekat"
                android:fontFamily="@font/sarabun_bold"
                android:text="more"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="50px" />

        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

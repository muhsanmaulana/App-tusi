<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        android:background="#E5E5E5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/stasiunmrt_text_mrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sarabun_bold"
                android:text="Stasiun MRT Terdekat"
                android:textColor="#747171"
                android:textSize="45px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="60dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/location1_image_mrt"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/location_stasiunterdekat" />

                <TextView
                    android:id="@+id/stasiun1_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Stasiun Senayan"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <TextView
                    android:id="@+id/jarak_stasiun1_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/sarabun_regular"
                    android:text="3 Km"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <Button
                    android:id="@+id/detail1_button_mrt"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/detail_stasiunterdekat"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="36px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/location2_image_mrt"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/location_stasiunterdekat" />

                <TextView
                    android:id="@+id/stasiun2_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Stasiun Dukuh Atas"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <TextView
                    android:id="@+id/jarak_stasiun2_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/sarabun_regular"
                    android:text="5 Km"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <Button
                    android:id="@+id/detail2_button_mrt"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/detail_stasiunterdekat"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="36px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/location3_image_mrt"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/location_stasiunterdekat" />

                <TextView
                    android:id="@+id/stasiun3_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Stasiun Blok M"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <TextView
                    android:id="@+id/jarak_stasiun3_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/sarabun_regular"
                    android:text="7 Km"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <Button
                    android:id="@+id/detail3_button_mrt"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/detail_stasiunterdekat"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="36px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/location4_image_mrt"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/location_stasiunterdekat" />

                <TextView
                    android:id="@+id/stasiun4_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Stasiun Blok A"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <TextView
                    android:id="@+id/jarak_stasiun4_text_mrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/sarabun_regular"
                    android:text="10 Km"
                    android:textColor="#000000"
                    android:textSize="37px" />

                <Button
                    android:id="@+id/detail4_button_mrt"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/detail_stasiunterdekat"
                    android:fontFamily="@font/sarabun_bold"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="36px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/location5_image_mrt"
                    android:layout_width="20dp"

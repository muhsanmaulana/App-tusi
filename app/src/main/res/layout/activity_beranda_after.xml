<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaAfter">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#009688">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/profil_pic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/sarabun_medium"
                            android:text="Saldo"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/saldo_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/sarabun_medium"
                                android:text="Rp. 99.000"
                                android:textColor="#FFFFFF"
                                android:textSize="24sp" />

                            <ImageButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="17dp"
                                android:background="@drawable/ic_add_circle_outline_black_24dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="110dp"
                            android:fontFamily="@font/sarabun_bold"
                            android:text="Poin"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/poin_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sarabun_medium"
                            android:text="200"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />


                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/option_tj"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:background="@drawable/tj_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sarabun_bold"
                        android:text="Cari halte terdekat"
                        android:textColor="@color/ColorGreenText"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="200dp"
                    android:layout_marginRight="0dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/option_sepeda"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:background="@drawable/sepeda_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sarabun_bold"
                        android:text="Cari pos sepeda terdekat"
                        android:textAlignment="center"
                        android:textColor="@color/ColorGreenText"
                        android:textSize="18sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/option_krl"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:background="@drawable/krl_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sarabun_bold"
                        android:text="Cari KRL terdekat"
                        android:textColor="@color/ColorGreenText"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="200dp"
                    android:layout_marginRight="0dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/option_mrt"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:background="@drawable/mrt_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sarabun_bold"
                        android:text="Cari MRT terdekat"
                        android:textAlignment="center"
                        android:textColor="@color/ColorGreenText"
                        android:textSize="18sp" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rectangle_navigation"
            android:elevation="10dp"

            >

            <ImageButton
                android:id="@+id/go_nav"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/go_nav" />


            <ImageButton
                android:id="@+id/home_nav"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_home_black_24dp" />

            <ImageButton
                android:id="@+id/transaction_nav"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:background="@drawable/ic_trending_up_black_24dp" />

            <ImageButton
                android:id="@+id/notif_nav"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="100dp"
                android:background="@drawable/ic_notifications_black_24dp" />

            <ImageButton
                android:id="@+id/profile_nav"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_lock_black_24dp" />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_beranda_after" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginStart="75dp"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:srcCompat="@drawable/perjalananberhasil"
        tools:layout_editor_absoluteY="200dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perjalanan berhasil:)"
        android:fontFamily="@font/sarabun_bold"
        android:textSize="25sp"
        android:textColor="#41AD82"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="365dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:fontFamily="@font/sarabun_bold"
        android:text="Total biaya: Rp 10.000"
        android:textColor="#41AD82"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout"
        tools:layout_editor_absoluteY="400dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/birubutton"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="455dp"
        android:fontFamily="@font/sarabun_bold"
        android:text="Oke"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
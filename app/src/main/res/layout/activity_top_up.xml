<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_topup">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="165dp"
                    android:background="@drawable/rectangle_topup"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_up_text_top_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/sarabun_bold"
                        android:text="Top Up"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="55px"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/harga_text_top_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sarabun_regular"
                        android:text="Rp. 99.000"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="95px"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/pilih_text_top_up"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sarabun_regular"
                            android:text="Pilih metode top up"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="normal" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="45dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/metode1_image_top_up"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/rectangle_metodetopup" />

                        <ImageView
                            android:id="@+id/metode2_image_top_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="175dp"
                            android:layout_marginRight="0dp"
                            app:srcCompat="@drawable/rectangle_metodetopup" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="45dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/metode3_image_top_up"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/rectangle_metodetopup" />

                        <ImageView
                            android:id="@+id/metode4_image_top_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="175dp"
                            android:layout_marginRight="0dp"
                            app:srcCompat="@drawable/rectangle_metodetopup" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/lainnya_text_top_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:fontFamily="@font/sarabun_regular"
                            android:text="Lainnya"
                            android:textAlignment="textStart"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="normal" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="45dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/metode5_image_top_up"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/rectangle_metodetopup" />

                        <ImageView
                            android:id="@+id/metode6_image_top_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="175dp"
                            android:layout_marginRight="0dp"
                            app:srcCompat="@drawable/rectangle_metodetopup" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:background="@drawable/rectangle_navigation"

            >

            <ImageButton
                android:id="@+id/go_nav"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/go_nav" />


            <ImageButton
                android:id="@+id/home_nav"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_home_black_24dp" />

            <ImageButton
                android:id="@+id/transaction_nav"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:background="@drawable/ic_trending_up_black_24dp" />

            <ImageButton
                android:id="@+id/notif_nav"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="100dp"
                android:background="@drawable/ic_notifications_black_24dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_nav"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/profil_pic" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

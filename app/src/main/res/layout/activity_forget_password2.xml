<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword2">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:fontFamily="@font/sarabun_extrabold"
        android:textSize="45sp"
        android:textColor="#41AD82"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="50dp"/>

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="59dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="168dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle_login" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/sandi" />

        <EditText
            android:id="@+id/sandi_baru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:fontFamily="@font/sarabun_medium"
            android:hint="Kata sandi baru"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="413dp"
        android:layout_height="174dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle_login" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/sandi" />

        <EditText
            android:id="@+id/konfirmasi_sandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:fontFamily="@font/sarabun_medium"
            android:hint="Konfirmasi kata sandi baru"
            android:textSize="14sp" />

        <Button
            android:id="@+id/go_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle_button"
            android:fontFamily="@font/sarabun_bold"
            android:text="Go"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
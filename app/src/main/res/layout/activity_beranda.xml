<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorBackground"
    tools:context=".BerandaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="#009688"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/option_tj"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:background="@drawable/tj_logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cari halte terdekat"
                        android:fontFamily="@font/sarabun_bold"
                        android:textColor="@color/ColorGreenText"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="200dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/option_sepeda"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:background="@drawable/sepeda_logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cari pos sepeda terdekat"
                        android:fontFamily="@font/sarabun_bold"
                        android:textAlignment="center"
                        android:textColor="@color/ColorGreenText"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/option_krl"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:background="@drawable/krl_logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cari KRL terdekat"
                        android:fontFamily="@font/sarabun_bold"
                        android:textColor="@color/ColorGreenText"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="200dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/option_mrt"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:background="@drawable/mrt_logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cari MRT terdekat"
                        android:fontFamily="@font/sarabun_bold"
                        android:textAlignment="center"
                        android:textColor="@color/ColorGreenText"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:elevation="10dp"
                    android:background="@drawable/rectangle_navigation"

                    >
                    <ImageButton
                        android:id="@+id/go_nav"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/go_nav" />


                    <ImageButton
                        android:id="@+id/home_nav"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_width="45dp"
                        android:layout_centerVertical="true"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_home_black_24dp"
                        />
                    <ImageButton
                        android:id="@+id/transaction_nav"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="100dp"
                        android:layout_width="45dp"
                        android:layout_centerVertical="true"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_trending_up_black_24dp"
                        />
                    <ImageButton
                        android:id="@+id/notif_nav"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="100dp"
                        android:layout_width="45dp"
                        android:layout_centerVertical="true"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_notifications_black_24dp"
                        />
                    <ImageButton
                        android:id="@+id/profile_nav"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_width="45dp"
                        android:layout_centerVertical="true"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_lock_black_24dp"
                        />
                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>






    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>